<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background"
    tools:context=".screen_main">


    <ImageButton
        android:id="@+id/scm_profile"
        android:layout_width="150dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="12dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile"/>

    <TextView
        android:id="@+id/scm_profiletxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:text="profile"
        android:textStyle="bold"
        android:textSize="20dp"
        />

    <ImageButton
        android:id="@+id/scm_studinfo"
        android:layout_width="150dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/student"/>

    <TextView
        android:id="@+id/scm_studenttxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Information"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <ImageButton
        android:id="@+id/scm_attand"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="15dp"
        android:src="@drawable/attandance"/>

    <TextView
        android:id="@+id/scm_attandtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take Attandance"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:textSize="20dp"/>


</LinearLayout>